@model IEnumerable<LibraryInventory.Models.User>

@{
    ViewData["Title"] = "All Users";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <style>
        /* Button styling for bottom right corner */
        .bottom-right-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 15px 30px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 18px;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .bottom-right-button:hover {
                background-color: #218838;
                transform: scale(1.1);
            }

            .bottom-right-button:focus {
                outline: none;
            }

            .bottom-right-button:active {
                transform: scale(1);
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Users</h1>
        <form method="post" action="@Url.Action("SaveChanges", "User")">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>User Type</th>
                        <th>Books</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No users found</td>
                        </tr>
                    }
                    else
                    {
                     
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <select class="form-select" id="Type" name="Type">
                                        <option value="@user.Type" selected>@user.Type</option>
                                        @if (user.Type == "Admin")
                                        {
                                            <option value="Guest">Guest</option>
                                        }
                                        else if (user.Type == "Guest")
                                        {
                                            <option value="Admin">Admin</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    @if (user.Books?.Any() ?? false)
                                    {
                                        <ul class="list-unstyled mb-0">
                                            @foreach (var book in user.Books)
                                            {
                                                <li><i class="fas fa-book"></i> @book.Name</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No books assigned</span>
                                    }
                                </td>
                                <input type="hidden" name="id" value="@user.Id" />
                            </tr>
                         
                        }
                    }
                </tbody>
            </table>

            <button asp-action="SaveChanges" asp-Controller="Admin" type="submit" class="bottom-right-button">Save Changes</button>
        </form>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-4"><i class="fas fa-arrow-left"></i> Back to Home</a>
    </div>
</body>
</html>
