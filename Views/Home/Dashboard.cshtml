<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/Dashboard.css">
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Welcome to Admin Dashboard</h1>
            <p class="lead">Manage your library's with ease using the buttons below.</p>
        </div>

        <div class="row">
            <!-- Create Button -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add a Book</h5>
                    <p class="card-text">Add new books to the library's inventory.</p>
                    <a href="@Url.Action("Create", "Book")" class="btn btn-success btn-block">Create</a>
                </div>
            </div>

            <!-- Read Button -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View Books</h5>
                    <p class="card-text">Browse all books in the library.</p>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-success btn-block">Read</a>
                </div>
            </div>

            <!-- Update Button -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit a Book</h5>
                    <p class="card-text">Modify details of existing books.</p>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-warning btn-block">Update</a>
                </div>
            </div>

            <!-- Delete Button -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Remove a Book</h5>
                    <p class="card-text">Delete books you no longer need in the library.</p>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-danger btn-block">Delete</a>
                </div>
            </div>

            <!-- All Users Button -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View All Users</h5>
                    <p class="card-text">See a list of all users registered in the system.</p>
                    <a href="@Url.Action("GetAllUsers", "Admin")" class="btn btn-info btn-block">View Users</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
