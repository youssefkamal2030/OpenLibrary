@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model LibraryInventory.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
   <link rel="stylesheet" href="~/css//Register.css"/>
</head>
<body>

    <div class="container">
        <h2>Register</h2>

        <form asp-action="Register" method="post" id="registrationForm">
            <div>
                <label for="Name">Name</label>
                <input asp-for="Name" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label for="Email">Email</label>
                <input asp-for="Email" id="Email" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label for="Password">Password</label>
                <input asp-for="Password" id="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="hidden" name="Type" value="Guest" />

            <button type="submit">Register</button>
        </form>

        <div class="form-footer">
            <a asp-action="Login">Already have an account? Login</a>
        </div>
    </div>

    <script src="~/js/ValidationFormRegister.js"></script>

</body>
</html>
